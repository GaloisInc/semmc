name:                semmc-arm
version:             0.1.0.0
synopsis:            Semantics infrastructure for ARM
-- description:
license:             BSD3
license-file:        LICENSE
author:              Tristan Ravitch
maintainer:          tristan@nochair.net
-- copyright:
category:            Compiler
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     SemMC.ARM
                     , SemMC.Architecture.ARM.BaseSemantics
                     , SemMC.Architecture.ARM.Location
                     , SemMC.Architecture.ARM.Opcodes
  other-modules:       SemMC.Architecture.ARM.BaseSemantics.Branch
                     , SemMC.Architecture.ARM.BaseSemantics.Helpers
                     , SemMC.Architecture.ARM.BaseSemantics.Memory
                     , SemMC.Architecture.ARM.BaseSemantics.Base
                     , SemMC.Architecture.ARM.BaseSemantics.OperandClasses
                     , SemMC.Architecture.ARM.BaseSemantics.Registers
                     , SemMC.Architecture.ARM.Components
                     , SemMC.Architecture.ARM.Eval
                     , SemMC.Architecture.ARM.Opcodes.InternalA32
                     , SemMC.Architecture.ARM.Opcodes.InternalT32
                     , SemMC.Architecture.ARM.UF
  -- other-extensions:
  build-depends:       base >=4 && <5
                     , binary
                     , bytestring
                     , containers
                     , crucible
                     , dismantle-arm
                     , dismantle-tablegen
                     , dismantle-thumb
                     , filepath
                     , megaparsec
                     , parameterized-utils
                     , pretty
                     , semmc
                     , text
                     , vector-sized >= 0.5 && < 0.7
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall


executable semmc-arm-genbase
  default-language: Haskell2010
  hs-source-dirs:   tools
  main-is:          GenBase.hs
  ghc-options:      -Wall -rtsopts
  build-depends: base
               , directory
               , dismantle-arm
               , dismantle-thumb
               , filepath
               , optparse-applicative
               , semmc
               , semmc-arm
               , text

executable semmc-arm-test
  default-language: Haskell2010
  ghc-options: -Wall
  hs-source-dirs: tools
  main-is: Main.hs
  build-depends: base,
                 bytestring,
                 time,
                 vector-sized,
                 semmc,
                 semmc-arm
