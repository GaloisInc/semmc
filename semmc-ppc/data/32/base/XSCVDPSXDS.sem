;; VSX Scalar Truncate Double-Precision to Integer and Convert to Signed Integer Doubleword Format with Saturate (XX2-form)
((operands
 ((xT . 'Vsrc)
  (xB . 'Vsrc)))
 (in
  ('FPSCR xB 'IP))
 (defs
  (('FPSCR
   ((_ extract 31 0)
    ((_ call "ppc.vec1")
     "XSCVDPSXDS"
     xB
     'FPSCR)))
   (xT
    ((_ extract 159 32)
     ((_ call "ppc.vec1")
      "XSCVDPSXDS"
      xB
      'FPSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
