;; Vector Splat Halfword (VX-form)
((operands
 ((vrT . 'Vrrc)
  (vrB . 'Vrrc)
  (uim . 'U5imm)))
 (in
  ('VSCR vrB 'IP))
 (defs
  (('VSCR
   ((_ extract 31 0)
    ((_ call "uf.ppc.vec2")
     "VSPLTH"
     ((_ zero_extend 123)
      uim)
     vrB
     'VSCR)))
   (vrT
    ((_ extract 159 32)
     ((_ call "uf.ppc.vec2")
      "VSPLTH"
      ((_ zero_extend 123)
       uim)
      vrB
      'VSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
