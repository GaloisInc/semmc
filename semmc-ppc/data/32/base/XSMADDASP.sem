;; VSX Scalar Multiply-Add Single-Precision (XX3-form)
((operands
 ((xT . 'Vsrc)
  (xA . 'Vsrc)
  (xB . 'Vsrc)))
 (in
  ('FPSCR xB xA 'IP))
 (defs
  (('FPSCR
   ((_ extract 31 0)
    ((_ call "uf.ppc.vec2")
     "XSMADDASP"
     xA
     xB
     'FPSCR)))
   (xT
    ((_ extract 159 32)
     ((_ call "uf.ppc.vec2")
      "XSMADDASP"
      xA
      xB
      'FPSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
