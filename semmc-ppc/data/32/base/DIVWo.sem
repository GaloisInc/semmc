;; Divide Word (XO-form, RC=1)
((operands
 ((rT Gprc)
  (rB Gprc)
  (rA Gprc)))
 (in
  (loc.XER loc.CR op.rA op.rB loc.IP))
 (defs
  ((loc.CR
   (with
    ()
    (call
     df.cmpImm
     (bvslt
      (bvsdiv op.rA op.rB)
      #x00000000)
     (bvsgt
      (bvsdiv op.rA op.rB)
      #x00000000)
     #b000
     loc.XER
     loc.CR)))
   (op.rT
    (with
     ()
     (bvsdiv op.rA op.rB)))
   (loc.IP
    (with
     ()
     (bvadd loc.IP #x00000004))))))
