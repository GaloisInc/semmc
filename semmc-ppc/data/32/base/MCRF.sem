;; Move Condition Register Field (XL-form)
((operands
 ((BF . 'Crrc)
  (BFA . 'Crrc)))
 (in
  ('CR BFA BF 'IP))
 (defs
  (('CR
   ((_ call "df.updateCRField")
    'CR
    BF
    ((_ extract 31 28)
     (bvlshr
      'CR
      (bvmul
       ((_ zero_extend 29)
        BFA)
       #x00000004)))))
   ('IP
    (bvadd 'IP #x00000004)))))
