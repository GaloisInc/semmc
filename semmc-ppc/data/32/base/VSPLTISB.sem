;; Vector Splat Immediate Signed Byte (VX-form)
((operands
 ((vrT. 'Vrrc)
  (sim. 'S5imm)))
 (in
  ('VSCR 'IP))
 (defs
  (('VSCR
   ((_ extract 159 128)
    ((_ call "ppc.vec1")
     "VSPLTISB"
     ((_ sign_extend 123)
      sim)
     'VSCR)))
   (vrT
    ((_ extract 127 0)
     ((_ call "ppc.vec1")
      "VSPLTISB"
      ((_ sign_extend 123)
       sim)
      'VSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
