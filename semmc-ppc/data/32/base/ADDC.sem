;; Add Carrying (XO-form)
((operands ((rT . 'Gprc) (rA . 'Gprc) (rB . 'Gprc))) 
  (in ('XER rB rA))
  (defs 
    (('XER 
       (concat 
         ((_ extract 1 0) 'XER)
         (concat 
           ((_ extract 0 0) (bvadd ((_ zero_extend 1) rA) ((_ zero_extend 1) rB)))
           ((_ extract 31 3) 'XER)))) 
      (rT ((_ extract 32 1) (bvadd ((_ zero_extend 1) rA) ((_ zero_extend 1) rB)))))))