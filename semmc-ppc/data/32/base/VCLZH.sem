;; Vector Count Leading Zeros Halfword (VX-form)
((operands ((vrT . 'Vrrc) (vrB . 'Vrrc))) 
  (in ('VSCR vrB 'IP))
  (defs 
    (('VSCR ((_ extract 159 128) ((_ call "ppc.vec1") "VCLZH" vrB 'VSCR))) 
      (vrT ((_ extract 127 0) ((_ call "ppc.vec1") "VCLZH" vrB 'VSCR)))
      ('IP (bvadd 'IP #x00000004)))))