;; Add Carrying (XO-form, RC=1)
((operands
 ((rT . 'Gprc)
  (rB . 'Gprc)
  (rA . 'Gprc)))
 (in
  ('XER 'CR 'XER rB rA 'IP))
 (defs
  (('CR
   ((_ call "df.cmpImm")
    (bvslt
     ((_ extract 31 0)
      (bvadd
       ((_ zero_extend 1)
        rA)
       ((_ zero_extend 1)
        rB)))
     #x00000000)
    (bvsgt
     ((_ extract 31 0)
      (bvadd
       ((_ zero_extend 1)
        rA)
       ((_ zero_extend 1)
        rB)))
     #x00000000)
    #b000
    'XER
    'CR))
   ('XER
    (concat
     ((_ extract 31 30)
      'XER)
     (concat
      ((_ extract 32 32)
       (bvadd
        ((_ zero_extend 1)
         rA)
        ((_ zero_extend 1)
         rB)))
      ((_ extract 28 0)
       'XER))))
   (rT
    ((_ extract 31 0)
     (bvadd
      ((_ zero_extend 1)
       rA)
      ((_ zero_extend 1)
       rB))))
   ('IP
    (bvadd 'IP #x00000004)))))
