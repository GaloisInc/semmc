;; Extend Sign Halfword (X-form, RC=1)
((operands
 ((rA . 'Gprc)
  (rS . 'Gprc)))
 (in
  ('XER 'CR rS 'IP))
 (defs
  (('CR
   ((_ call "df.cmpImm")
    (bvslt
     ((_ sign_extend 16)
      ((_ extract 31 16)
       rS))
     #x00000000)
    (bvsgt
     ((_ sign_extend 16)
      ((_ extract 31 16)
       rS))
     #x00000000)
    #b000
    'XER
    'CR))
   (rA
    ((_ sign_extend 16)
     ((_ extract 31 16)
      rS)))
   ('IP
    (bvadd 'IP #x00000004)))))
