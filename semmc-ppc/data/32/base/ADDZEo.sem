;; Add to Zero Extended (XO-form, RC=1)
((operands
 ((rT Gprc)
  (rA Gprc)))
 (in
  (loc.XER loc.CR loc.XER op.rA loc.IP))
 (defs
  ((loc.CR
   (with
    ()
    (call
     df.cmpImm
     (bvslt
      (bvadd
       op.rA
       ((_ zero_extend 31)
        ((_ extract 29 29)
         loc.XER)))
      #x00000000)
     (bvsgt
      (bvadd
       op.rA
       ((_ zero_extend 31)
        ((_ extract 29 29)
         loc.XER)))
      #x00000000)
     #b000
     loc.XER
     loc.CR)))
   (op.rT
    (with
     ()
     (bvadd
      op.rA
      ((_ zero_extend 31)
       ((_ extract 29 29)
        loc.XER)))))
   (loc.IP
    (with
     ()
     (bvadd loc.IP #x00000004))))))
