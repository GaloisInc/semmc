;; Add to Minus One Extended (XO-form, RC=1)
((operands
 ((rT . 'Gprc)
  (rA . 'Gprc)))
 (in
  ('XER 'CR 'XER rA 'IP))
 (defs
  (('CR
   ((_ call "df.cmpImm")
    (bvslt
     ((_ extract 32 1)
      (bvsub
       (bvadd
        ((_ zero_extend 1)
         rA)
        ((_ zero_extend 32)
         ((_ extract 2 2)
          'XER)))
       #b000000000000000000000000000000001))
     #x00000000)
    (bvsgt
     ((_ extract 32 1)
      (bvsub
       (bvadd
        ((_ zero_extend 1)
         rA)
        ((_ zero_extend 32)
         ((_ extract 2 2)
          'XER)))
       #b000000000000000000000000000000001))
     #x00000000)
    #b000
    'XER
    'CR))
   ('XER
    (concat
     ((_ extract 1 0)
      'XER)
     (concat
      ((_ extract 0 0)
       (bvsub
        (bvadd
         ((_ zero_extend 1)
          rA)
         ((_ zero_extend 32)
          ((_ extract 2 2)
           'XER)))
        #b000000000000000000000000000000001))
      ((_ extract 31 3)
       'XER))))
   (rT
    ((_ extract 32 1)
     (bvsub
      (bvadd
       ((_ zero_extend 1)
        rA)
       ((_ zero_extend 32)
        ((_ extract 2 2)
         'XER)))
      #b000000000000000000000000000000001)))
   ('IP
    (bvadd 'IP #x00000004)))))
