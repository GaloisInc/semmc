;; Vector Sum Across Signed Word Saturate (VX-form)
((operands
 ((vrT . 'Vrrc)
  (vrA . 'Vrrc)
  (vrB . 'Vrrc)))
 (in
  ('VSCR vrB vrA 'IP))
 (defs
  (('VSCR
   ((_ extract 31 0)
    ((_ call "ppc.vec2")
     "VSUMSWS"
     vrA
     vrB
     'VSCR)))
   (vrT
    ((_ extract 159 32)
     ((_ call "ppc.vec2")
      "VSUMSWS"
      vrA
      vrB
      'VSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
