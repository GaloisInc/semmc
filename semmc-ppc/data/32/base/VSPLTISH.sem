;; Vector Splat Immediate Signed Halfword (VX-form)
((operands
 ((vrT . 'Vrrc)
  (sim . 'S5imm)))
 (in
  ('VSCR 'IP))
 (defs
  (('VSCR
   ((_ extract 31 0)
    ((_ call "ppc.vec1")
     "VSPLTISH"
     ((_ sign_extend 123)
      sim)
     'VSCR)))
   (vrT
    ((_ extract 159 32)
     ((_ call "ppc.vec1")
      "VSPLTISH"
      ((_ sign_extend 123)
       sim)
      'VSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
