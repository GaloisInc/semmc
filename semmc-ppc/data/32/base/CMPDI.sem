;; Compare Immediate (D-form)

;; This variant is the double word variant (where L=1)

((operands ((fld . 'Crrc) (imm . 'S16imm) (rA . 'Gprc))) 
  (in ('CR rA imm))
  (defs 
    (('CR 
       (bvor 
         'CR
         (bvshl 
           ((_ zero_extend 28) 
             (concat 
               (ite 
                 (bvslt rA ((_ sign_extend 16) imm))
                 #b100
                 (ite (bvsgt rA ((_ sign_extend 16) imm)) #b010 #b001))
               ((_ extract 32 32) 'XER)))
           (bvmul ((_ zero_extend 29) fld) #x00000004)))))))