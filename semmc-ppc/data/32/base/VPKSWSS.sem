;; Vector Pack Signed Word Signed Saturate (VX-form)
((operands
 ((vrT . 'Vrrc)
  (vrA . 'Vrrc)
  (vrB . 'Vrrc)))
 (in
  ('VSCR vrB vrA 'IP))
 (defs
  (('VSCR
   ((_ extract 159 128)
    ((_ call "uf.ppc.vec2")
     "VPKSWSS"
     vrA
     vrB
     'VSCR)))
   (vrT
    ((_ extract 127 0)
     ((_ call "uf.ppc.vec2")
      "VPKSWSS"
      vrA
      vrB
      'VSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
