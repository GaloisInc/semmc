;; Vector Merge Low Halfword (VX-form)
((operands
 ((vrT . 'Vrrc)
  (vrA . 'Vrrc)
  (vrB . 'Vrrc)))
 (in
  ('VSCR vrB vrA 'IP))
 (defs
  (('VSCR
   ((_ extract 31 0)
    ((_ call "uf.ppc.vec2")
     "VMRGLH"
     vrA
     vrB
     'VSCR)))
   (vrT
    ((_ extract 159 32)
     ((_ call "uf.ppc.vec2")
      "VMRGLH"
      vrA
      vrB
      'VSCR)))
   ('IP
    (bvadd 'IP #x00000004)))))
