 ((memref . 'Memrr)
  (rS . 'Gprc)))
 (in
  ('Mem memref rS 'IP))
 (defs
  (('Mem
   ((_ call "write_mem.8")
    'Mem
    (bvadd
     (ite
      ((_ call "ppc.is_r0")
       ((_ call "ppc.memrr_base")
        memref))
      #x00000000
      ((_ call "ppc.memrr_base")
       memref))
     ((_ call "ppc.memrr_offset")
      memref))
    ((_ extract 7 0)
     rS)))
   ('IP
    (bvadd 'IP #x00000004)))))
