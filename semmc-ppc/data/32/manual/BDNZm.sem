;; BDNZ - Branch Conditional after decrementing CTR and CTR is non-zero (with BH=0b10)
((operands ((target . 'Condbrtarget))) 
  (in ('IP 'CTR))
  (defs 
    (('IP 
       (ite 
         (xorp (notp (bveq (bvsub 'CTR #x00000001) #x00000000)) (bvne #b0 #b0))
         (bvadd ((_ sign_extend 16) (concat target #b00)) 'IP)
         (bvadd 'IP #x00000004))) ('CTR (bvsub 'CTR #x00000001)))))