;; Load Halfword and Zero Indexed (X-form)
((operands
 ((rT . 'Gprc)
  (memref . 'Memrr)))
 (in
  ('Mem memref 'IP))
 (defs
  ((rT
   ((_ zero_extend 16)
    ((_ call "uf.read_mem.16")
     'Mem
     (bvadd
      (ite
       ((_ call "uf.ppc.is_r0")
        ((_ call "uf.ppc.memrr_base")
         memref))
       #x00000000
       ((_ call "uf.ppc.memrr_base")
        memref))
      ((_ call "uf.ppc.memrr_offset")
       memref)))))
   ('IP
    (bvadd 'IP #x00000004)))))
