;; Load Halfword and Zero (D-form)
((operands
 ((rT . 'Gprc)
  (memref . 'Memri)))
 (in
  ('Mem memref 'IP))
 (defs
  ((rT
   ((_ zero_extend 16)
    ((_ call "uf.read_mem.16")
     'Mem
     (bvadd
      (ite
       ((_ call "uf.ppc.is_r0")
        ((_ call "uf.ppc.memri_reg")
         memref))
       #x00000000
       ((_ call "uf.ppc.memri_reg")
        memref))
      ((_ sign_extend 16)
       ((_ call "uf.ppc.memri_offset")
        memref))))))
   ('IP
    (bvadd 'IP #x00000004)))))
