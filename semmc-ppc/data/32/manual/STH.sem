;; Store Halfword (D-form)
((operands ((rS . 'Gprc) (memref . 'Memri))) 
  (in ('Mem memref rS))
  (defs 
    (('Mem 
       ((_ call "write_mem") 
         'Mem
         (bvadd 
           (ite 
             ((_ call "is_r0") ((_ call memri_reg) memref))
             #x00000000
             ((_ call memri_reg) memref))
           ((_ sign_extend 16) ((_ call "memri_offset") memref)))
         2
         ((_ extract 31 16) rS))))))