;; Store Word with Update (D-form)
((operands
 ((memref . 'Memri)
  (rS . 'Gprc)))
 (in
  ('Mem memref rS 'IP))
 (defs
  ((((_ call "ppc.memri_reg")
   memref)
   (bvadd
    ((_ call "ppc.memri_reg")
     memref)
    ((_ sign_extend 16)
     ((_ call "ppc.memri_offset")
      memref))))
   ('Mem
    ((_ call "write_mem.32")
     'Mem
     (bvadd
      ((_ call "ppc.memri_reg")
       memref)
      ((_ sign_extend 16)
       ((_ call "ppc.memri_offset")
        memref)))
     rS))
   ('IP
    (bvadd 'IP #x00000004)))))
