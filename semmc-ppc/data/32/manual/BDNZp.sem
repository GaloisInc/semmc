;; BDNZ - Branch Conditional after decrementing CTR and CTR is non-zero (with BH=0b11)
((operands
 ((target Condbrtarget)))
 (in
  (loc.IP loc.CTR))
 (defs
  ((loc.IP
   (with
    ()
    (ite
     (xorp
      (notp
       (bveq
        (bvsub loc.CTR #x00000001)
        #x00000000))
      #false)
     (bvadd
      ((_ sign_extend 16)
       (concat op.target #b00))
      loc.IP)
     (bvadd loc.IP #x00000004))))
   (loc.CTR
    (with
     ()
     (bvsub loc.CTR #x00000001))))))
