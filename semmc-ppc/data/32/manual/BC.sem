;; BC (B-form, AA=0, LK=0)
;; This form is actually equivalent to BT, which has the BO field=01100
((operands
 ((target . 'Condbrtarget)
  (bi . 'Crbitrc)))
 (in
  ('IP 'CR 'CTR))
 (defs
  (('IP
   (ite
    ((_ call "uf.test_bit_dynamic")
     ((_ zero_extend 27)
      bi)
     'CR)
    (bvadd
     ((_ sign_extend 16)
      (concat target #b00))
     'IP)
    (bvadd 'IP #x00000004))))))
