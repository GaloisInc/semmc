;; Load Word and Zero (D-form)
((operands ((rT . 'Gprc) (memref . 'Memri))) 
  (in ('Mem memref))
  (defs 
    ((rT 
       ((_ call "read_mem.32") 
         'Mem
         (bvadd 
           (ite 
             ((_ call "ppc.is_r0") ((_ call "ppc.memri_reg") memref))
             #x00000000
             ((_ call "ppc.memri_reg") memref))
           ((_ sign_extend 16) ((_ call "ppc.memri_offset") memref))))))))