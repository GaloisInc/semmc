;; BCCTR (XL-form, LK=1)
;; This variant has BO=01100, branch when the CR bit is 1
((operands ((bi . 'Crbitrc))) 
  (in ('CR 'IP 'CTR))
  (defs 
    (('LNK (bvadd 'IP #x00000004)) 
      ('IP 
        (ite 
          (bveq ((_ call "extract_dynamic") bi bi 'CR) #b0)
          (concat ((_ extract 29 0) 'CTR) #b00)
          (bvadd 'IP #x00000004))))))