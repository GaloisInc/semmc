;; Load Word and Zero Indexed (X-form)
((operands ((rT . 'Gprc) (memref . 'Memrr)))
 (in ('Mem memref 'IP))
 (defs
  ((rT
    ((_ call "read_mem.32")
     'Mem
     (bvadd
      (ite
       ((_ call "ppc.is_r0")
        ((_ call "ppc.memrr_base")
         memref))
       #x00000000
       ((_ call "ppc.memrr_base") memref))
      ((_ call "ppc.memrr_offset") memref))))
   ('IP (bvadd 'IP #x00000004)))))
