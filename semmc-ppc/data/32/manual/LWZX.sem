    ((rT 
       ((_ call "read_mem") 
         'Mem
         (bvadd 
           (ite 
             ((_ call "ppc.is_r0") ((_ call memrr_base) memref))
             #x00000000
             ((_ call memrr_base) memref))
           ((_ call "memrr_offset") memref))
