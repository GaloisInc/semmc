;; BCLR (XL-form, LK=1, AA=0)
;; Generic branch conditional to LR with arbitrary BO field
((operands
 ((bh . 'I32imm)
  (bi . 'Crbitrc)
  (bo . 'U5imm)))
 (in
  ('CR 'CTR 'IP 'LNK))
 (defs
  (('LNK
   (bvadd 'IP #x00000004))
   ('IP
    (ite
     (andp
      ((_ call "df.generic_cond_ok")
       'CR
       bo
       bi)
      ((_ call "df.generic_ctr_ok")
       bo
       'CTR))
     (concat
      ((_ extract 29 0)
       'LNK)
      #b00)
     (bvadd 'IP #x00000004))))))
