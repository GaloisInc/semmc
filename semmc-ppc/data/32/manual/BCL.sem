;; BC (B-form, AA=0, LK=1)
;; This form is actually equivalent to BT, which has the BO field=01100
((operands
 ((target . 'Condbrtarget)
  (bi . 'Crbitrc)))
 (in
  ('IP 'CR 'CTR))
 (defs
  (('LNK
   (bvadd 'IP #x00000004))
   ('IP
    (ite
     (notp
      ((_ call "uf.test_bit_dynamic.32")
       'CR
       ((_ zero_extend 27)
        (bvsub #b11111 bi))))
     (bvadd
      ((_ sign_extend 16)
       (concat target #b00))
      'IP)
     (bvadd 'IP #x00000004))))))
