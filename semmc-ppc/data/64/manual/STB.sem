((operands ((rS . 'Gprc) (memref . 'Memri))) 
  (in ('Mem memref rS))
  (defs 
    (('Mem 
       ((_ call "write_mem") 
         'Mem
         (bvadd 
           (ite 
             ((_ call "ppc.is_r0") ((_ call memri_reg) memref))
             #x0000000000000000
             ((_ call memri_reg) memref))
           ((_ sign_extend 48) ((_ call "memri_offset") memref)))
         1
         ((_ extract 63 56) rS))))))