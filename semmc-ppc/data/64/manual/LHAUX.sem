;; Load Halfword Algebraic with Update Indexed (X-form)
((operands ((rT . 'Gprc) (memref . 'Memrr))) 
  (in ('Mem memref))
  (defs 
    ((((_ call "ppc.memrr_base") memref) 
       (bvadd ((_ call "ppc.memrr_base") memref) ((_ call "ppc.memrr_offset") memref))) 
      (rT 
        ((_ sign_extend 48) 
          ((_ call "read_mem.16") 
            'Mem
            (bvadd 
              ((_ call "ppc.memrr_base") memref)
              ((_ call "ppc.memrr_offset") memref))))))))