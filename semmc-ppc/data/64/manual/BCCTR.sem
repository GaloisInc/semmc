;; BCCTR (XL-form, LK=0)
;; This variant has BO=01100, branch when the CR bit is 1
((operands ((bi . 'Crbitrc))) 
  (in ('CR 'IP 'CTR))
  (defs 
    (('IP 
       (ite 
         (bveq ((_ call "extract_dynamic") bi bi 'CR) #b0)
         (concat ((_ extract 61 0) 'CTR) #b00)
         (bvadd 'IP #x0000000000000004))))))