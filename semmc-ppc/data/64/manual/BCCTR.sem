;; BCCTR (XL-form, LK=0)
;; This variant has BO=01100, branch when the CR bit is 1
((operands
 ((bi . 'Crbitrc)))
 (in
  ('CR 'IP 'CTR))
 (defs
  (('IP
   (ite
    ((_ call "test_bit_dynamic")
     'CR
     ((_ zero_extend 27)
      (bvsub #b11111 bi)))
    (concat
     ((_ extract 63 2)
      'CTR)
     #b00)
    (bvadd 'IP #x0000000000000004))))))
