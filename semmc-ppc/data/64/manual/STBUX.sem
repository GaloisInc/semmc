;; Store Byte with Update Indexed (X-form)
((operands ((rS . 'Gprc) (memref . 'Memrr))) 
  (in ('Mem memref rS))
  (defs 
    ((((_ call "ppc.memrr_base") memref) 
       (bvadd ((_ call "ppc.memrr_base") memref) ((_ call "ppc.memrr_offset") memref))) 
      ('Mem 
        ((_ call "write_mem") 
          'Mem
          (bvadd 
            ((_ call "ppc.memrr_base") memref)
            ((_ call "ppc.memrr_offset") memref))
          1
          ((_ extract 63 56) rS))))))