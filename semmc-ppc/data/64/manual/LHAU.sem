;; Load Halfword Algebraic with Update (D-form)
((operands
 ((rT Gprc)
  (memref Memri)))
 (in
  (op.memref loc.Mem loc.IP))
 (defs
  (((call uf.ppc.memri_reg op.memref)
   (with
    ()
    (bvadd
     (call uf.ppc.memri_reg op.memref)
     ((_ sign_extend 48)
      (call uf.ppc.memri_offset op.memref)))))
   (op.rT
    (with
     ()
     ((_ sign_extend 48)
      (call
       uf.read_mem.16
       loc.Mem
       (bvadd
        (call uf.ppc.memri_reg op.memref)
        ((_ sign_extend 48)
         (call uf.ppc.memri_offset op.memref)))))))
   (loc.IP
    (with
     ()
     (bvadd loc.IP #x0000000000000004))))))
