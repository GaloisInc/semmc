  (in ('Mem memref))
  (defs 
    ((rT 
       ((_ sign_extend 32) 
         ((_ call "read_mem.32") 
           'Mem
           (bvadd 
             (ite 
               ((_ call "ppc.is_r0") ((_ call "ppc.memrix_reg") memref))
               #x0000000000000000
               ((_ call "ppc.memrix_reg") memref))
             ((_ sign_extend 48) (concat ((_ call "ppc.memrix_offset") memref) #b00)))))))))