;; Load Word Algebraic (DS-form)
((operands ((rT . 'Gprc) (memref . 'Memri))) 
  (in ('Mem memref))
  (defs 
    ((rT 
       ((_ sign_extend 32) 
         ((_ call "read_mem") 
           'Mem
           (bvadd 
             (ite 
               ((_ call "ppc.is_r0") ((_ call memri_reg) memref))
               #x0000000000000000
               ((_ call memri_reg) memref))
             ((_ sign_extend 48) (concat ((_ call "memri_offset") memref) #b00)))
           #x00000004))))))