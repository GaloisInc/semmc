;; Load Halfword Algebraic Indexed (X-form)
((operands ((rT . 'Gprc) (memref . 'Memrr))) 
  (in ('Mem memref))
  (defs 
    ((rT 
       ((_ sign_extend 48) 
         ((_ call "read_mem") 
           'Mem
           (bvadd 
             (ite 
               ((_ call "ppc.is_r0") ((_ call memrr_base) memref))
               #x0000000000000000
               ((_ call memrr_base) memref))
             ((_ call "memrr_offset") memref))
           #x00000002))))))