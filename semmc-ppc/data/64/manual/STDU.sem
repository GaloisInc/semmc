;; Store Doubleword with Update (DS-form)
((operands ((rS . 'Gprc) (memref . 'Memri))) 
  (in ('Mem memref rS))
  (defs 
    ((((_ call "ppc.memri_reg") memref) 
       (bvadd 
         ((_ call "ppc.memri_reg") memref)
         ((_ sign_extend 48) (concat ((_ call "ppc.memri_offset") memref) #b00)))) 
      ('Mem 
        ((_ call "write_mem") 
          'Mem
          (bvadd 
            ((_ call "ppc.memri_reg") memref)
            ((_ sign_extend 48) (concat ((_ call "ppc.memri_offset") memref) #b00)))
          8
          rS)))))