;; Load Halfword and Reserve Indexed (X-form)
;; This is basically LHZX with additional memory synchronization semantics
((operands
 ((rT . 'Gprc)
  (memref . 'Memrr)))
 (in
  ('Mem memref 'IP))
 (defs
  ((rT
   ((_ zero_extend 48)
    ((_ call "uf.read_mem.16")
     'Mem
     (bvadd
      (ite
       ((_ call "uf.ppc.is_r0")
        ((_ call "uf.ppc.memrr_base")
         memref))
       #x0000000000000000
       ((_ call "uf.ppc.memrr_base")
        memref))
      ((_ call "uf.ppc.memrr_offset")
       memref)))))
   ('IP
    (bvadd 'IP #x0000000000000004)))))
