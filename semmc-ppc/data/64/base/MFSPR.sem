;; Move From Special Purpose Register (XFX-form)
((operands
 ((rT Gprc)
  (SPR I32imm)))
 (in
  (loc.LNK loc.XER loc.CTR op.SPR loc.IP))
 (defs
  ((op.rT
   (with
    ()
    (ite
     (bveq op.SPR #x00000001)
     loc.XER
     (ite
      (bveq op.SPR #x00000008)
      loc.LNK
      loc.CTR))))
   (loc.IP
    (with
     ()
     (bvadd loc.IP #x0000000000000004))))))
