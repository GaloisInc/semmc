;; Vector Count Leading Zeros Halfword (VX-form)
((operands
 ((vrT . 'Vrrc)
  (vrB . 'Vrrc)))
 (in
  ('VSCR vrB 'IP))
 (defs
  (('VSCR
   ((_ extract 31 0)
    ((_ call "uf.ppc.vec1")
     "VCLZH"
     vrB
     'VSCR)))
   (vrT
    ((_ extract 159 32)
     ((_ call "uf.ppc.vec1")
      "VCLZH"
      vrB
      'VSCR)))
   ('IP
    (bvadd 'IP #x0000000000000004)))))
