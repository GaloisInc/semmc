;; Extend Sign Halfword (X-form, RC=1)
((operands
 ((rA . 'Gprc)
  (rS . 'Gprc)))
 (in
  ('XER 'CR rS 'IP))
 (defs
  (('CR
   ((_ call "df.cmpImm")
    (bvslt
     ((_ sign_extend 48)
      ((_ extract 15 0)
       rS))
     #x0000000000000000)
    (bvsgt
     ((_ sign_extend 48)
      ((_ extract 15 0)
       rS))
     #x0000000000000000)
    #b000
    'XER
    'CR))
   (rA
    ((_ sign_extend 48)
     ((_ extract 15 0)
      rS)))
   ('IP
    (bvadd 'IP #x0000000000000004)))))
