;; Store Doubleword Conditional Indexed (X-form)
;; The manual lists this with a . since it always updates CR0
((operands
 ((memref Memrr)
  (rS Gprc)))
 (in
  (loc.XER loc.CR loc.Mem op.memref op.rS loc.IP))
 (defs
  ((loc.CR
   (with
    ()
    (bvor
     loc.CR
     ((_ zero_extend 28)
      (concat
       (concat #b00 #b1)
       ((_ extract 31 31)
        loc.XER))))))
   (loc.Mem
    (with
     ()
     (call
      uf.write_mem.64
      loc.Mem
      (bvadd
       (ite
        (call
         uf.ppc.is_r0
         (call uf.ppc.memrr_base op.memref))
        #x0000000000000000
        (call uf.ppc.memrr_base op.memref))
       (call uf.ppc.memrr_offset op.memref))
      op.rS)))
   (loc.IP
    (with
     ()
     (bvadd loc.IP #x0000000000000004))))))
