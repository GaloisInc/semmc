 ((fld . 'Crrc)
  (rA . 'Gprc)
  (rB . 'Gprc)))
 (in
  ('CR 'XER rB rA 'IP))
 (defs
  (('CR
   (bvor
    (bvand
     'CR
     (bvnot
      (bvshl
       #x0000000f
       (bvmul
        (bvsub
         #x00000007
         ((_ zero_extend 29)
          fld))
        #x00000004))))
    (bvshl
     ((_ zero_extend 28)
      (concat
       (ite
        (bvslt
         ((_ extract 31 0)
          rB)
         ((_ extract 31 0)
          rA))
        #b100
        (ite
         (bvsgt
          ((_ extract 31 0)
           rB)
          ((_ extract 31 0)
           rA))
         #b010
         #b001))
       ((_ extract 31 31)
        'XER)))
     (bvmul
      (bvsub
       #x00000007
       ((_ zero_extend 29)
        fld))
      #x00000004))))
   ('IP
    (bvadd 'IP #x0000000000000004)))))
