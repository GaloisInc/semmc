;; VSX Scalar Convert Signed Integer Doubleword to Floating-Point Format and Round to Single-Precision (XX2-form)
((operands
 ((xT . 'Vsrc)
  (xB . 'Vsrc)))
 (in
  ('FPSCR xB 'IP))
 (defs
  (('FPSCR
   ((_ extract 31 0)
    ((_ call "ppc.vec1")
     "XSCVSXDSP"
     xB
     'FPSCR)))
   (xT
    ((_ extract 159 32)
     ((_ call "ppc.vec1")
      "XSCVSXDSP"
      xB
      'FPSCR)))
   ('IP
    (bvadd 'IP #x0000000000000004)))))
