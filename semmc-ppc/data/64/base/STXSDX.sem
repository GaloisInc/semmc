;; Store VSX Scalar Doubleword Indexed (XX1-form)
((operands ((memref . 'Memrr) (xS . 'Vsrc)))
 (in (memref 'Mem xS 'IP))
 (defs
  (('Mem
    ((_ call "write_mem.64")
     'Mem
     (bvadd
      ((_ call "ppc.memrr_offset") memref)
      (ite
       ((_ call "ppc.is_r0")
        ((_ call "ppc.memrr_base")
         memref))
       #x0000000000000000
       ((_ call "ppc.memrr_base") memref)))
     ((_ extract 63 0) xS)))
   ('IP (bvadd 'IP #x0000000000000004)))))
