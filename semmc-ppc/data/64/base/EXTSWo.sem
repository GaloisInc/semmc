;; Extend Sign Word (X-form, RC=1)
((operands
 ((rA Gprc)
  (rS Gprc)))
 (in
  (loc.XER loc.CR op.rS loc.IP))
 (defs
  ((loc.CR
   (with
    ()
    (call
     df.cmpImm
     (bvslt
      ((_ sign_extend 32)
       ((_ extract 31 0)
        op.rS))
      #x0000000000000000)
     (bvsgt
      ((_ sign_extend 32)
       ((_ extract 31 0)
        op.rS))
      #x0000000000000000)
     #b000
     loc.XER
     loc.CR)))
   (op.rA
    (with
     ()
     ((_ sign_extend 32)
      ((_ extract 31 0)
       op.rS))))
   (loc.IP
    (with
     ()
     (bvadd loc.IP #x0000000000000004))))))
