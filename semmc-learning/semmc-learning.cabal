category:            Compiler
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     SemMC.Stochastic.Synthesize
                       SemMC.Stochastic.RvwpOptimization
                       SemMC.Stochastic.IORelation
                       -- TODO: Push these into hidden modules
                       SemMC.Stochastic.IORelation.Shared
                       SemMC.Stochastic.IORelation.Explicit
                       SemMC.Stochastic.IORelation.Parser
                       SemMC.Stochastic.IORelation.Types
                       SemMC.Stochastic.IORelation.Implicit
                       SemMC.Stochastic.Strata
                       SemMC.Stochastic.CandidateProgram
                       SemMC.Stochastic.Monad
                       SemMC.Stochastic.Pseudo
  other-modules:       SemMC.Stochastic.Constraints
                       SemMC.Stochastic.Extract
                       SemMC.Stochastic.Classify
                       SemMC.Stochastic.Generalize
                       SemMC.Stochastic.Initialize
                       SemMC.Stochastic.Statistics
                       SemMC.Stochastic.Instantiate
  -- other-modules:
  build-depends:       base >= 4.9 && < 5,
                       mtl,
                       containers,
                       stm,
                       text >= 1 && < 2,
                       time,
                       filepath,
                       bytestring >=0.10 && < 0.11,
                       directory >= 1 && < 2,
                       parsec >= 3.1 && < 3.2,
                       s-cargot >= 0.1 && < 0.2,
                       located-base,
                       async,
                       sqlite-simple,
                       crucible,
                       unliftio,
                       exceptions >= 0.7 && < 0.11,
                       parameterized-utils,
                       what4,
                       dismantle-tablegen,
                       semmc
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite semmc-learning-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       base ^>=4.12.0.0, mtl ^>=2.2.2, containers ^>=0.6.0.1, stm ^>=2.5.0.0, text ^>=1.2.3.1, time ^>=1.8.0.2, filepath ^>=1.4.2.1, bytestring ^>=0.10.8.2, directory ^>=1.3.3.0, parsec ^>=3.1.13.0
